// ERD generated from provided SQL dump
// Convert to PNG with Graphviz: dot -Tpng erd.dot -o erd.png

digraph ERD {
  rankdir=LR;
  node [shape=record, fontname="Arial", fontsize=10];

  about [label="{about|id (PK)\lmission\lvision\lhistory\lhistory_image\lpresident_name\lpresident_title\lpresident_image\lmission_image\lvision_image\lcore_values\lhymn_left\lhymn_right\lformer_admins\llast_updated\l}"];

  academic [label="{academic|id (PK)\ltitle\lcontent\lcreated_at\l}"];
  academic_programs [label="{academic_programs|id (PK)\ltitle\lcontent\lcreated_at\l}"];
  academic_requirements [label="{academic_requirements|id (PK)\ltitle\lcontent\lcreated_at\l}"];
  academic_scholarship [label="{academic_scholarship|id (PK)\ltitle\lcontent\lcreated_at\l}"];

  admins [label="{admins|id (PK)\lname\lemail (UNIQUE)\lpassword\l}"];

  announcements [label="{announcements|id (PK)\ltitle\lcontent\limage_path\lstart_date\lend_date\lis_active\lcreated_at\l}"];

  campuses [label="{campuses|id (PK)\lname\laddress\l}"];

  maps [label="{maps|id (PK)\lcampus_id (FK -> campuses.id)\lcampus_name\lembed_map_link\lembed_streetview_link\ldescription_map\ldescription_streetview\laddress\lcreated_at\lembed_html\l}"];

  offices [label="{offices|id (PK)\lcampus_id (FK -> campuses.id)\lname\ldescription\loffice_hours\lcreated_at\lroom\l}"];

  site_settings [label="{site_settings|id (PK)\ltitle\llogo_path\lbackground_path\llast_updated\l}"];

  // foreign key relationships
  offices -> campuses [label="campus_id", fontsize=9];
  maps -> campuses [label="campus_id", fontsize=9];

  // visual grouping hints (optional)
  { rank = same; academic; academic_programs; academic_requirements; academic_scholarship }
  { rank = same; about; admins; site_settings }
}
